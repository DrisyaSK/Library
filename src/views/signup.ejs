    <script>        
    function validate()
    {
        var psw=document.getElementById("password");
        var repeatpsw=document.getElementById("repeat");
        var email=document.getElementById("email");
        var btn=document.getElementById("btn");
        var exp=/^\w+([\.-]?\w+)*@[A-Za-z]+([\.-]?\w+)*(\.[A-Za-z]{2,3})+$/;
        if(exp.test(email.value))
        {
            
            email.style.borderBlockColor="white";
        }
        else
        {
            email.style.borderBlockColor="red";
            email.focus();
            
        }

        var exp= /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}$/;
        if(exp.test(psw.value))
        {
        
        psw.style.borderBlockColor="white";
        }
        else
        {
        
            psw.style.borderBlockColor="red";
            psw.focus();
        
        }
        if (repeatpsw.value.length==psw.value.length && repeatpsw.value.match(psw.value))
        {
            
           repeatpsw.style.borderBlockColor="white";
           
        }
        else
        {
            repeatpsw.style.borderBlockColor="red";
            repeatpsw.value="";
            repeatpsw.focus();
        }
        
    }
